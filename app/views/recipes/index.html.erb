<h1>Recipes</h1>

<%= link_to "View by Category", categories_path %>

<% @recipes.each do |recipe| %>
  <h3><%= link_to recipe.name, recipe_path(recipe) %></h3><br>
  <% key_ingredient_array = recipe.recipe_ingredients.to_a %>
  <% key_ingredient_array.each do |ingredient| %>
    <% if ingredient.key_ingredient == true %>
      <% key_ingredient = Ingredient.find(ingredient.ingredient_id) %>
      Key Ingredient: <%= key_ingredient.name %><br>
    <% end %>
  <% end %>
  Category: <%= recipe.category.name %><br>
<% end %><br>

<% if current_user %>
  <%= link_to "Add New Recipe", new_recipe_path %>
<% end %>
